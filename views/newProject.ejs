<div id="newProjectsDiv" class="container">
	<form action="/projectsCollaborator/newProject" method="POST">
		            <div class="form-group w-75 align-center">
                        <label class="col-form-label col-form-label-lg">Project Title</label>
                        <input type="text" class="form-control projectTitle" name="projectTitle" placeholder="Enter Project Title" >
                    </div>
					<div class="form-group w-75 align-center">
                        <label class="col-form-label col-form-label-lg">Project Description</label>
						<textarea class="form-control projectDescription" name="projectDescription"  rows=7" placeholder="Enter Project Description"></textarea>
                    </div> 
                    <div class="form-group w-75 align-center">
                        <label class="col-form-label col-form-label-lg">Team Member Details</label>
                        <div class="team-members">
                            <input type="text" class="form-control teamMember" name="projectMember" placeholder="Enter Registration Number"><br>
                            <input type="text" class="form-control teamMember" name="projectMember" placeholder="Enter Registration Number"><br>
                        </div>
                        <button type="button" class="btn btn-md addNewMemberBtn" id="addnewMemberBtn">Add New Member</button>
                    </div>
					<div class="text-center">
                        <button type="submit" class="btn btn-lg submitBtn">Create Project</button>
                    </div>
	</form>
	<br>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script>
    $(document).ready(function() {
    $('.addNewMemberBtn').click(function(e){
        e.preventDefault();
        $('.team-members').append('<input type="text" class="form-control teamMember" name="projectMember" placeholder="Enter Registration Number"><br>');
    })
    
})
</script>

